{
  "id": "test-readonly",
  "title": "Read-only form",
  "layout": [
    {
      "type": "section",
      "title": "Primary",
      "readOnlyWhen": {
        "all": [
          { "field": "locked", "op": "EQ", "value": true }
        ]
      },
      "fields": [
        {
          "name": "locked",
          "type": "switch",
          "label": "Lock section"
        },
        {
          "name": "firstName",
          "type": "text",
          "label": "First name"
        },
        {
          "name": "perFieldLock",
          "type": "switch",
          "label": "Lock last name"
        },
        {
          "name": "lastName",
          "type": "text",
          "label": "Last name",
          "readOnlyWhen": {
            "all": [
              { "field": "perFieldLock", "op": "EQ", "value": true }
            ]
          }
        }
      ]
    },
    {
      "type": "section",
      "title": "Contacts",
      "fields": [
        {
          "name": "lockContacts",
          "type": "switch",
          "label": "Lock contacts"
        },
        {
          "name": "contacts",
          "type": "group",
          "minItems": 1,
          "maxItems": 3,
          "readOnlyWhen": {
            "all": [
              { "field": "lockContacts", "op": "EQ", "value": true }
            ]
          },
          "fields": [
            {
              "name": "contactName",
              "type": "text",
              "label": "Contact name"
            },
            {
              "name": "contactEmail",
              "type": "email",
              "label": "Contact email"
            }
          ]
        },
        {
          "name": "notes",
          "type": "text",
          "label": "Notes"
        }
      ]
    }
  ],
  "submit": {
    "endpoint": "/noop",
    "method": "POST",
    "actions": []
  }
}
